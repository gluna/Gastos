
<%= form_tag(controller: "gastos", action: "consulta_por_mes", method: "get") do %>
<br>
<%= select_tag('ano', options_for_select([["2018"], ["2019"]]))%>
<%= select_tag('mes', options_for_select([["Janeiro","01"], ["Fevereiro","02"]]))%>
<%= submit_tag("Consultar") %>
<br>

<br>
  <table>
    <tr>
      <th>Tipo Gasto</th>
      <th>Valor</th>
    </tr>
    <% if @gastos01 != nil %>
      <% @total = 0 %>
      <% @gastos01.each do |gasto| %>
      <tr>
        <td><%= gasto.tipo_gasto.descricao %></td>
        <td><%= gasto.valor %></td>
      </tr>
          <% @total = @total + gasto.valor %>
      <% end %>
    <% end %>
    <br>
    <tr>
      <td><%="Total "%></td><td><%= @total%></td>
    </tr>
  </table>
  <br><br>

<% end %>
