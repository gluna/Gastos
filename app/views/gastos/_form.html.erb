<%= form_with(model: gasto, local: true) do |form| %>
  <% if gasto.errors.any? %>
    <div id="error_explanation">
      <!-- <h2><%= pluralize(gasto.errors.count, "error") %> prohibited this gasto from being saved:</h2> -->

      <ul>
      <% gasto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :dtgasto %>
    <%= form.date_field :dtgasto, id: :gasto_dtgasto %>
  </div>

  <div class="field">
    <%= form.label :tipo_gasto_id %>
    <%= form.select :tipo_gasto_id, options_from_collection_for_select(TipoGasto.all, :id, :descricao) %>
  </div>

  <div class="field">
    <%= form.label :valor %>
    <%= form.text_field :valor, id: :gasto_valor %>
  </div>

  <div class="field">
    <%= form.label :obs %>
    <%= form.text_field :obs, id: :gasto_obs %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
