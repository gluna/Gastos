<%= form_with(model: receita, local: true) do |form| %>
  <% if receita.errors.any? %>
    <div id="error_explanation">
      <!-- <h2><%= pluralize(receita.errors.count, "error") %> prohibited this receita from being saved:</h2> -->

      <ul>
      <% receita.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :dtreceita %>
    <%= form.date_field :dtreceita, id: :receita_dtreceita %>
  </div>

  <div class="field">
    <%= form.label :tipo_receita_id %>
    <%= form.select :tipo_receita_id, options_from_collection_for_select(TipoReceita.all, :id, :descricao) %>
  </div>


  <div class="field">
    <%= form.label :valor %>
    <%= form.text_field :valor, id: :receita_valor %>
  </div>

  <div class="actions">
    <%= form.submit 'Criar Receita'%>
  </div>
<% end %>
